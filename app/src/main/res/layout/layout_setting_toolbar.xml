<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View android:layout_width="wrap_content"
          android:background="@color/colorPrimary"
          android:layout_height="90dp"/>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/transparency"
                 android:src="@drawable/backbutton" tools:layout_editor_absoluteY="20dp"
                 tools:layout_editor_absoluteX="33dp"/>

    <ImageView android:layout_width="85dp"
               android:layout_height="85dp"
               android:src="@drawable/setting_fill"
               android:layout_gravity="center"
               android:background="@drawable/blue_circle"
               android:padding="20dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="59dp"/>
</android.support.constraint.ConstraintLayout>