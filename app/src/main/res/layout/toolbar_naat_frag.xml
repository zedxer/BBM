<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarNaat"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetEnd="0dp"
        android:layout_height="?actionBarSize">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="?actionBarSize">

            <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/back_button"
            />
            <ImageView
                    android:id="@+id/naatPageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naat_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/backButton"
                    android:padding="8dp"/>

            <TextView android:id="@+id/pageTitle"
                      android:layout_toEndOf="@+id/naatPageIcon"
                      android:layout_width="wrap_content"
                      android:layout_centerInParent="true"
                      android:layout_marginStart="5dp"
                      android:textColor="@color/colorWhite"
                      android:text="Naats"
                      android:textSize="@dimen/textsize_large"
                      android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/addNaat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white_24dp"
                    android:layout_toStartOf="@+id/navbarIcon"
                    android:padding="5dp"
                    android:visibility="gone"/>
            <ImageView
                    android:id="@+id/navbarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/nav_icon"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>
